<div class="row">
  <div class="col m12 postcard-border">
    <div class="row">
      <div class="col m6 text">
        <div class="content">
          <%= @post.content %>
        </div>
        <div class="vr">
        </div>
      </div>
      <div class="col m6 address">
        <div class="stamp">
          <span class="p-font">P</span>
        </div>
        <div class="post">
            <p>
              <h3><%= @post.title %></h3>
              <hr>
              <h5><%= @post.user.first_name%> <%= @post.user.last_name%></h5>
              <hr>
              <br>
              <h6>post.city.name</h6>
              <hr>
            </p>
        </div>
        <div class="col m4 offset-m4">
          <a href="#" class="waves-effect waves-light btn-large form-button"></a>
          <% if @user == current_user then %>
            <%= link_to "Edit Post", edit_city_post_path(@city), :class => 'waves-effect waves-light btn-large form-button' do %>
              <i class="material-icons">mode_edit</i>
            <% end %>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>

