<h1><%= @post.title %></h1>
<h3>by <%= link_to "#{@post.user.first_name} #{@post.user.last_name}", user_path(@post.user) %></h3>
<p><%= @post.content %></p>

<% if @post.user == current_user %>
  <%= link_to "Edit Post", edit_city_post_path(@city) %>
  <%= link_to "Delete Post", city_post_path(@city, @post), method: :delete, data: { confirm: 'Are you sure you want to delete this post about your adventure?' } %>
<% end %>

<%= link_to "Back to #{@city.city_name}", city_path(@city) %>
<br>
<%= link_to "Back to #{@post.user.first_name} #{@post.user.last_name}", user_path(@post.user) %>
