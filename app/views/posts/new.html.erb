<%= form_for @post, url: '/posts' do |f| %>
  <div class="form-group">
    <%= f.text_field :city, class: "form-control", placeholder: "City Name", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.text_field :title, class: "form-control", placeholder: "The title for your post" %>
  </div>
  <div class="form-group">
    <%= f.email_field :content, class: "form-control", placeholder: "Your experience in the city" %>
  </div>

  <div class="form-group">
    <%= f.submit "Save Post", class: "btn btn-block btn-success" %>
  </div>
<% end %>
